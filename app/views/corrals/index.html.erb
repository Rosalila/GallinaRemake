<p id="notice"><%= notice %></p>

<div class="col-sm-12 col-sm-offset-0 col-md-12 col-md-offset-0 main">
<h2 class="sub-header">Listing Corrals</h2>
<div class="table-responsive">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th>Agreement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corrals.each do |corral| %>
      <tr>
        <td><%= corral.name %></td>
        <td><%= corral.image %></td>
        <td><%= corral.description %></td>
        <td><%= corral.agreement %></td>
        <td><%= link_to 'Show', corral %></td>
        <td><%= link_to 'Edit', edit_corral_path(corral) %></td>
        <td><%= link_to 'Destroy', corral, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<%= link_to 'New Corral', new_corral_path %>
</div>

<br>
