<h2 class="sub-header">Gallinas</h2>

<ul>
  <% @corral.gallinas.each do |gallina| %>
    <li><a href="/gallinas/<%=gallina.id%>"><%= gallina.name %></a></li>
  <% end %>
</ul>

<% @gallina = Gallina.new %>

<%= form_for(@gallina) do |f| %>
  <% if @gallina.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gallina.errors.count, "error") %> prohibited this gallina from being saved:</h2>

      <ul>
      <% @gallina.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :corral_id, :value => @corral.id %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
