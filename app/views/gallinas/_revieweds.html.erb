<div class="col-sm-12 col-sm-offset-0 col-md-12 col-md-offset-0 main">
<h2>Revieweds</h2>
<ul>
  <% @gallina.revieweds.each do |reviewed| %>
    <li><a href="/revieweds/<%=reviewed.id%>"><%= reviewed.name %></a> <a href="/review_form?reviewed_id=<%=reviewed.id%>">review</a></li>
  <% end %>
</ul>

<% @reviewed = Reviewed.new %>

<%= form_for(@reviewed) do |f| %>
  <% if @reviewed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reviewed.errors.count, "error") %> prohibited this reviewed from being saved:</h2>

      <ul>
      <% @reviewed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :gallina_id, :value => @gallina.id %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
